{
    "constants": {
        "vm__kmem_size": {"sysctl": "vm.kmem_size"},
        "vm__stats__vm__v_v_page_count": {"sysctl": "vm.stats.vm.v_page_count"},
        "hw__ncpu": {"sysctl": "hw.ncpu"}
    },
    "variables": {
        "vm__stats__vm__v_free_count": {"sysctl": "vm.stats.vm.v_free_count"},
        "time": {"syscmd": "date '+%H:%M:%S'"},
        "vm__vmtotal": {"sysctl": "vm.vmtotal"},
        "vm__loadavg": {"sysctl": "vm.loadavg"},
        "var_messages": {"syscmd": "wc -l /var/log/messages | awk '{print $1}'"},
        "vm__swap_total": {"sysctl": "vm.swap_total"}
    },
    "incidents": {
        "sysctl": {
            "description": "loadavg test",
            "error": {
                "trigger": "{vm__loadavg[0]} > 0.7",
                "untrigger": "{vm__loadavg[0]} < 0.5",
                "escalation": "logger 'LoadAvg is {vm__loadavg[0]}'",
                "remediation": ""
            }
        }
    }
}
